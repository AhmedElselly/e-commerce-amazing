<h1>All posts</h1>

<% include ../partials/paginate %>

<% posts.docs.forEach(function(post){ %>
    <h3><%= post.title %></h3>
    <h5><%= post.price %></h5>
    <a href="/posts/<%= post.id %>">Show Details!</a>
    <a href="/posts/add-to-cart/<%= post.id %>">Add to cart</a>
<% }) %>

